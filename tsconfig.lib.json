{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/packages/digitaldefiance-i18n-lib",
    "rootDir": "./src",
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests/i18n-engine.registerIfNotExists.spec.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests/**/*"
  ]
}